<!-- res/drawable/table_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for even rows (white) -->
    <solid android:color="#FFFFFF" />

    <!-- Define border stroke -->
    <stroke
            android:width="1dp"
            android:color="#CCCCCC" /> <!-- Color of the stroke (light gray) -->

    <!-- Set alternating row colors -->
    <corners android:radius="0dp" /> <!-- No rounded corners -->
</shape>
